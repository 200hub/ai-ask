{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "selection-toolbar",
    "description": "Capability for the floating selection toolbar window",
    "windows": [
        "selection-toolbar"
    ],
    "permissions": [
        "core:default",
        "core:event:default",
        "core:event:allow-listen",
        "core:event:allow-unlisten",
        "core:window:default",
        "core:window:allow-show",
        "core:window:allow-hide",
        "core:window:allow-set-focus",
        "store:default",
        "store:allow-load",
        "store:allow-get",
        "store:allow-set",
        "store:allow-save"
    ]
}